---
import Footer from '../components/Footer.astro';
import Head, { Props as HeadProps } from '../components/Head.astro';

export type Props = HeadProps & { href: string; };

const {
    href
} = Astro.props;
---
<!DOCTYPE html>
<html lang="de">
    <Head
        {...Astro.props}
    />
    <body>
        <div id="page-wrapper">
            <div id="content-wrapper">
                <slot />
            </div>
            <Footer href={href} />
        </div>
        <script defer src='/scripts/navigation.js' />
        <script defer src="/scripts/hiddenFields.js" />
    </body>
</html>
