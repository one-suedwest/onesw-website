---
import Instagram from "./svg/Instagram.astro";
import YouTube from "./svg/YouTube.astro";
import OneLogoSmall from "./svg/OneLogoSmall.astro";

export interface Props {
  href: string;
}
const { href } = Astro.props;

interface NavLink {
  key: string;
  title: string;
  text: string;
  href: string;
}

const navLinks: NavLink[] = [
  {
    text: "Startseite",
    title: "Zur Startseite",
    href: "/",
    key: "startseite",
  },
  // {
  //   text: "Faschingsfreizeit",
  //   title: "Die ONE Glory 2023",
  //   href: "/glory",
  //   key: "faschi",
  // },
  {
    text: "Lead",
    title: "Die ONE Lead im Frühjahr 2025",
    href: "/lead",
    key: "lead",
  },
  {
    text: "Teamboost",
    title: "Der ONE Südwest Teamboost im Herbst 2023",
    href: "https://yarps.church.tools/publicgroup/269",
    key: "teamboost",
  },
  {
    text: "Juleica",
    title: "Wofür braucht man eine Juleica?",
    href: "/warum-juleica",
    key: "juleica",
  },
  {
    text: "Leadership",
    title: "Möglichkeiten sich und sein Team zu Equippen",
    href: "https://www.cvents.eu/de/one-leadership-academy-nuernberg-20102024/",
    key: "leadership",
  },
  {
    text: "Spenden",
    title: "Über Paypal an uns spenden",
    href: "https://www.paypal.com/paypalme/onesw",
    key: "spenden",
  },
  {
    text: "Instagram",
    title: "Unsere Instagram Seite",
    href: "https://www.instagram.com/onesudwest/",
    key: "instagram",
  },
  {
    text: "Youtube",
    title: "Unser YouTube-Kanal",
    href: "https://www.youtube.com/channel/UCLFN65oYHbCQB-mkya-DTKA",
    key: "youtube",
  },
]

---

<style is:inline>
  .top-bar {
    height: 64px;
    box-sizing: border-box;
    padding: 10px;
    background-color: var(--dark-background-color);
    width: 100%;
  }

  .top-bar-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 0 10px;
  }

  .desktop-navigation {
    display: none;
    align-items: center;
    line-height: 1.1;
    gap: 40px;
  }

  .mobile-navigation {
    display: none;
    position: absolute;
    top: 64px;
    width: 100%;
    z-index: 1;
  }

  .mobile-navigation.open {
    display: block;
  }

  .mobile-navigation nav {
    display: flex;
    flex-direction: column;
    background-color: var(--dark-background-color);
  }

  .mobile-navigation a {
    width: 100%;
    height: 52px;
    line-height: 52px;
    padding: 0 20px;
    box-sizing: border-box;
  }

  .burger-menu {
    display: block;
    color: var(--font-color);
    height: 26px;
    cursor: pointer;
  }

  .burger-menu:hover svg {
    fill: var(--highlight-color);
    stroke: var(--highlight-color);
  }

  .burger-icon {
    display: none;
  }

  .burger-icon.show {
    display: block;
  }

  @media (min-width: 920px) {
    .top-bar {
      height: 100px;
    }

    .top-bar-nav {
      padding: 0 24px;
    }

    .desktop-navigation {
      display: flex;
    }

    .mobile-navigation,
    .burger-menu {
      display: none !important;
    }
  }
</style>

<div class="navigation">
  <div class="top-bar">
    <nav class="top-bar-nav">
      <a href="/" title="Startseite">
        <OneLogoSmall />
      </a>
      <div class="desktop-navigation">
        {navLinks.map((navLink) => (
          <a
            class={`navigation-link ${href === navLink.href ? "active" : ""}`}
            href={navLink.href}
            title={navLink.title}
            target={navLink.href.startsWith("/") ? "_self" : "_blank"}
          >
              {navLink.key === "instagram" ? (
                <Instagram />
              ) : navLink.key === "youtube" ? (
                <YouTube />
              ) : (
                navLink.text
              )}
          </a>
        ))}
      </div>
      <div class="burger-menu">
        <div class="burger burger-icon show">
          <svg
            width="26"
            height="26"
            fill="currentColor"
            xmlns="http://www.w3.org/2000/svg"
          >
            <rect x="2" y="3" width="22" height="4" rx="2"></rect>
            <rect x="2" y="11" width="22" height="4" rx="2"></rect>
            <rect x="2" y="19" width="22" height="4" rx="2"></rect>
          </svg>
        </div>
        <div class="x burger-icon">
          <svg
            width="26"
            height="26"
            stroke="currentColor"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="m4 5 18 16M4 21 22 5"
              stroke-width="4"
              stroke-linecap="round"></path>
          </svg>
        </div>
      </div>
    </nav>
  </div>

  <div class="mobile-navigation">
    <nav>
      {navLinks.map((navLink) => (
        <a
          class={`navigation-link ${href === navLink.href ? "active" : ""}`}
          href={navLink.href}
          title={navLink.title}
          target={navLink.href.startsWith("/") ? "_self" : "_blank"}
        >
            {navLink.text}
        </a>
      ))}
    </nav>
  </div>
</div>
